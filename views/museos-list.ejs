<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Museos</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container py-5">
    <div class="d-flex justify-content-between mb-4">
      <h1>Museos</h1>
      <div>
        <a href="/obras" class="btn btn-success">Obras</a>
        <a href="/museos/new" class="btn btn-primary">+ Nuevo Museo</a>
      </div>
    </div>

    <table class="table table-hover">
      <thead class="table-dark">
        <tr>
          <th>ID</th>
          <th>Nombre</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% museos.forEach(m => { %>
          <tr>
            <td><%= m.id %></td>
            <td><%= m.nombre %></td>
            <td class="d-flex gap-1">
              <a href="/museos/<%= m.id %>/obras" class="btn btn-sm btn-info">Ver obras</a>
              <a href="/museos/<%= m.id %>/edit" class="btn btn-sm btn-warning">Editar</a>
              <form action="/museos/<%= m.id %>?_method=DELETE" method="POST" class="d-inline">
                <button class="btn btn-sm btn-danger">Eliminar</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
