<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Obras de Arte</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>Obras de Arte</h1>
      <div>
        <a href="/museos" class="btn btn-success">Museos</a>
        <a href="/obras/new" class="btn btn-primary">+ Nueva Obra</a>
      </div>
    </div>

    <table class="table table-hover">
      <thead class="table-dark">
        <tr>
          <th>ID</th><th>Título</th><th>Artista</th><th>Año</th><th>Imagen</th><th>Museo</th><th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% obras.forEach(o => { %>
          <tr>
            <td><%= o.id %></td>
            <td><%= o.titulo %></td>
            <td><%= o.artista %></td>
            <td><%= o.anio %></td>
            <td><img src="/uploads/<%= o.imagen %>" width="80" alt="<%= o.titulo %>"></td>
            <td>
              <% if (o.Museos.length) { %>
                <%= o.Museos.map(m => m.nombre).join(', ') %>
              <% } else { %>
                Sin museo
              <% } %>
            </td>
            <td>
              <a href="/obras/<%= o.id %>/edit" class="btn btn-sm btn-warning">Editar</a>
              <form action="/obras/<%= o.id %>?_method=DELETE" method="POST" class="d-inline">
                <button class="btn btn-sm btn-danger">Eliminar</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
